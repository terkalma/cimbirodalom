<.header>
  Article <%= @article.id %>
  <:subtitle>This is a article record from your database.</:subtitle>
  <:actions>
    <.link patch={~p"/admin/articles/#{@article}/show/edit"} phx-click={JS.push_focus()}>
      <.button>Edit article</.button>
    </.link>
  </:actions>
</.header>

<.list>
  <:item title="Title"><%= @article.title %></:item>
  <:item title="Slug"><%= @article.slug %></:item>
  <:item title="Subtitle"><%= @article.subtitle %></:item>
</.list>

<.back navigate={~p"/admin/articles"}>Back to articles</.back>

<.modal :if={@live_action == :edit} id="article-modal" show on_cancel={JS.patch(~p"/admin/articles/#{@article}")}>
  <.live_component
    module={CimbirodalomWeb.Admin.ArticleLive.FormComponent}
    id={@article.id}
    title={@page_title}
    action={@live_action}
    article={@article}
    patch={~p"/admin/articles/#{@article}"}
  />
</.modal>
